<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="i_search"
        android:entries="@array/search_type_titles"
        android:entryValues="@array/search_type_values"
        android:key="search_type"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="%s"
        android:title="Тип поиска" />

    <Preference
        android:enabled="true"
        android:key="i_search_type_description"
        android:selectable="false"
        android:summary="@string/i_search_description"
        android:title="@string/i_search_title" />

    <Preference
        android:enabled="true"
        android:key="regular_search_type_description"
        android:selectable="false"
        android:summary="@string/regular_search_description"
        android:title="@string/regular_search_title" />

</PreferenceScreen>